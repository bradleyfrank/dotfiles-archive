#!/usr/bin/env bash

case "$OSTYPE" in
  darwin*)
    printf "macOS %s" "$(sw_vers | grep ProductVersion | cut -f2)"
    ;;
  linux*)
    if [[ -e "/etc/os-release" ]]; then
      . "/etc/os-release"
      printf "%s %s" "$ID" "$VERSION_ID"
    else
      printf "Unknown OS"
    fi
    ;;
  *)
    printf "Unknown OS"
    ;;
esac

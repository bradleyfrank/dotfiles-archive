#!/bin/bash

set -eu

SAVEIFS=$IFS
IFS="$(printf '\n\t')"

if [[ -z "$1" ]]; then
  # display usage if no parameters given
  echo "Usage: extract <file1> [file2] ... [fileN]"
else
  for n in "$@"; do
    if [[ -f "$n" ]]; then
      case "${n%,}" in
        *.cbt|*.tar.bz2|*.tar.gz|*.tar.xz|*.tbz2|*.tgz|*.txz|*.tar) 
                            tar xvf "$n" ;;
        *.lzma)             unlzma ./"$n" ;;
        *.bz2)              bunzip2 ./"$n" ;;
        *.cbr|*.rar)        unrar x -ad ./"$n" ;;
        *.gz)               gunzip ./"$n" ;;
        *.cbz|*.epub|*.zip) mkdir "${n%.*}" && unzip "$n" -d "${n%.*}" ;;
        *.z)                uncompress ./"$n" ;;
        *.7z|*.arj|*.cab|*.cb7|*.chm|*.deb|*.dmg|*.iso|*.lzh|*.msi|*.pkg|*.udf|*.wim|*.xar)
                            7z x ./"$n" ;;
        *.xz)               unxz ./"$n" ;;
        *.exe)              cabextract ./"$n" ;;
        *.cpio)             mkdir "${n%.*}" && mv "$n" "${n%.*}"/ && (cd "${n%.*}" && cpio -id < ./"$n") ;;
        *.cba|*.ace)        unace x ./"$n" ;;
        *.rpm)              7z x ./"$n" ;;
        *)                  echo "unknown archive method" ; return 1 ;;
      esac
    else
        echo "file does not exist"
        return 1
    fi
  done
fi

IFS=$SAVEIFS